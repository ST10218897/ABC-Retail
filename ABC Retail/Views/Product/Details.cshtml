@model ABC_Retail.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="card mb-3">
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="max-height: 300px; object-fit: cover;">
                </div>
            }
            else
            {
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <i class="fas fa-image fa-5x text-muted mb-3"></i>
                        <p class="text-muted">No image available</p>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Product ID</dt>
                <dd class="col-sm-9">@Model.ProductId</dd>
                
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>
                
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@{
                    if (decimal.TryParse(Model.Price, out var priceValue))
                    {
                        @priceValue.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))
                    }
                    else
                    {
                        @Model.Price
                    }
                }</dd>
                
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Category) ? "Uncategorized" : Model.Category)</dd>
                
                <dt class="col-sm-3">Stock Quantity</dt>
                <dd class="col-sm-9">@Model.StockQuantity</dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Inactive</span>
                    }
                </dd>
                
                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <dt class="col-sm-3">Image URL</dt>
                    <dd class="col-sm-9">
                        <a href="@Model.ImageUrl" target="_blank" class="text-truncate d-block" style="max-width: 300px;">
                            @Model.ImageUrl
                        </a>
                    </dd>
                }
            </dl>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
